{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": false,
        "target": "ES2022",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "strict": true,
        "moduleResolution": "node",
        "removeComments": false,
        "sourceMap": true,
        "noLib": false,
        "declaration": true,
        "lib": ["ES2022"],
        "outDir": "dist" 
    }
}
